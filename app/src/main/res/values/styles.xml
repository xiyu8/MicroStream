<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
                        <item name="android:windowTranslucentStatus">true</item>
                        <item name="android:windowTranslucentNavigation">true</item>
        <!--                <item name="android:windowIsTranslucent">true</item>-->
        <!--                <item name="android:windowDisablePreview">true</item>-->

        <item name="background">@drawable/splash_default</item>
        <item name="android:windowBackground">@drawable/splash_default</item>
        <item name="android:windowDisablePreview">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginTop">0dp</item>

    </style>

    <style name="my_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="dialog_loading_progress" parent="Base.Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">#ff0000</item>
        <item name="android:indeterminateTintMode">src_atop</item>
    </style>


    <!-- toolbar菜单样式 -->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!--在theme里面设置菜单文字为白色-->
        <item name="actionMenuTextColor">@android:color/black</item>
        <!-- toolbar菜单样式 -->
        <item name="android:popupTheme">@style/ToolbarPopupTheme</item>
        <item name="actionMenuTextAppearance">@style/ToolbarPopupTheme</item>
        <item name="android:titleTextAppearance">@style/ToolbarTitle</item>
        <!--<item name="selectableItemBackground">@drawable/toolbar_button_selector</item>-->
    </style>

    <style name="toolbarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
    </style>
    <!-- toolbar弹出菜单样式 -->
    <style name="ToolbarPopupTheme" parent="@style/ThemeOverlay.AppCompat">
        <!--背景色-->
        <item name="android:colorBackground">#212121</item>
    </style>
    <!--给toolbar加上titleTextAppearance属性：app:titleTextAppearance="@style/ToolbarTitle"-->
    <!-- toolbar标题样式 -->
    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--标题字体大小-->
        <item name="android:textSize">13sp</item>
    </style>


    <style name="mosaicSelectTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">#ff3581f3</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/mosaicSelectTabLayoutText</item>
        <item name="tabSelectedTextColor">#2277FF</item>
    </style>

    <style name="mosaicSelectTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#5C626B</item>
    </style>

<!--    main bar top-->
    <style name="main_bar_top_area" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bar_top_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/c_white</item>


    </style>
    <style name="main_bar_top_text" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_large</item>
        <item name="android:textColor">@color/c_dark</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    main bar top-->


    <style name="login_edit">
        <item name="android:colorControlNormal">@color/c_gray4</item>
        <item name="android:colorControlActivated">@color/ms_theme</item>
    </style>

</resources>