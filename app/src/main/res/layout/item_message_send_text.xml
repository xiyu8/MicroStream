<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="15dp"
    android:paddingBottom="10dp"
    >
    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constrainedWidth="false"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toRightOf="@id/text_content"
        app:layout_constraintHorizontal_bias="0"
        android:src="@drawable/default_avatar"
        />

    <TextView
        app:layout_constrainedHeight="true"
        app:layout_constrainedWidth="true"
        app:layout_constraintStart_toStartOf="@id/text_content"
        app:layout_constraintEnd_toEndOf="@id/text_content"
        app:layout_constraintTop_toTopOf="@id/text_content"
        app:layout_constraintBottom_toBottomOf="@id/text_content"
        android:background="@drawable/shape_ai_msg_bg_send_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="111111111111111111111111111111111111111111"
        android:textColor="@color/ms_text"
        android:textSize="16dp"
        app:layout_constraintTop_toTopOf="@id/user_avatar"
        app:layout_constraintRight_toLeftOf="@id/user_avatar"
        app:layout_constraintEnd_toStartOf="@id/user_avatar"
        app:layout_constraintLeft_toRightOf="@id/send_fail"
        app:layout_constraintStart_toEndOf="@id/send_fail"


        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_ai_msg_bg_send"
        android:paddingLeft="10dp"
        android:paddingTop="12dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textIsSelectable="true"
        />



    <ImageView
        android:id="@+id/send_fail"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@drawable/msg_state_fail_resend"
        app:layout_constraintTop_toTopOf="@id/text_content"
        app:layout_constraintBottom_toBottomOf="@id/text_content"
        app:layout_constraintRight_toLeftOf="@id/text_content"
        app:layout_constraintEnd_toStartOf="@id/text_content"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constrainedWidth="false"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <include
        android:id="@+id/part_message_send_animator_area"
        layout="@layout/part_ai_message_gen_animator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/text_content"
        app:layout_constraintBottom_toBottomOf="@id/text_content"
        app:layout_constraintRight_toLeftOf="@id/text_content"
        app:layout_constraintEnd_toStartOf="@id/text_content"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constrainedWidth="false"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />
