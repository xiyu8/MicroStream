<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@drawable/selector_item_click">
    
    <ImageView
        android:id="@+id/is_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/top_icon"
        />

    <ImageView
        android:id="@+id/chat_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/ms_text"
        />
    <com.jason.microstream.ui.compenent.avatar.AvatarView
        android:id="@+id/group_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="10dp"
        android:textSize="16dp"
        android:textColor="@color/ms_text"
        android:src="@drawable/default_avatar"
        />

    <TextView
        android:id="@+id/chat_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/chat_avatar"
        app:layout_constraintLeft_toRightOf="@id/chat_avatar"
        app:layout_constraintRight_toLeftOf="@id/last_msg_time"
        android:layout_marginLeft="10dp"
        android:textColor="@color/ms_text"
        android:maxLines="1"
        android:textSize="16dp"
        android:ellipsize="end"
        android:layout_marginRight="10dp"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0"

        />

    <TextView
        android:id="@+id/last_msg_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/chat_avatar"
        app:layout_constraintLeft_toRightOf="@id/chat_avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textColor="@color/ms_text_sub_hint"
        android:textSize="13dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="50dp"
        android:gravity="center_vertical|left"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_bias="0"
        />

    <TextView
        android:id="@+id/last_msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/chat_avatar"
        android:textSize="12dp"
        android:textColor="@color/ms_text_sub_hint"
        />

    <TextView
        android:id="@+id/unread_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        android:background="@drawable/shape_unread_count_bg"
        android:textSize="12dp"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/ms_white"
        />



    <LinearLayout
        android:id="@+id/mute_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="14dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >


        <ImageView
            android:id="@+id/mute_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/mute_icon"
            />


        <ImageView
            android:id="@+id/mute_unread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_unread_mute_bg"
            android:layout_marginLeft="6dp"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>