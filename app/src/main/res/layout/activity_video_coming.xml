<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/call_coming_bg"
    android:paddingTop="25dp"
    >


    <ImageView
        android:id="@+id/mini_fi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textColor="@color/c_white"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:onClick="onClick"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/opposite_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/opposite_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opposite_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text=""
            android:textColor="@color/c_white"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/invite_call_type_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/opposite_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:text="邀请您进行视频通话"
            android:textSize="16sp"
            android:textColor="@color/c_gray2" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@id/hang_up_area"
        android:gravity="center"
        android:layout_alignRight="@id/answer_call_area"
        >
