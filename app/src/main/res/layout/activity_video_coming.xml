        <!--        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/video_mute_area"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/video_mute"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:onClick="onClick"
                android:gravity="center"
                android:textColor="@color/c_white"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/video_mute_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="@color/c_gray1"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/hang_up_area"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="46dp"
        android:gravity="center"
        android:orientation="vertical"
        android:onClick="onClick"
        android:layout_marginBottom="30dp"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/call_hang_up" />

        <!--        android:src="@drawable/huangup_bg"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="挂断"
            android:textColor="@color/c_white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/answer_call_area"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="46dp"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/call_accept" />

        <!--        android:src="@drawable/receive_video_bg"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="接听"
            android:textColor="@color/c_white"
            android:textSize="12sp" />
    </LinearLayout>
